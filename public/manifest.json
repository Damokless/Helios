{
    "manifest_version": 3,
    "name": "Helios",
    "description": "Helios est une extension Chrome légère et rapide pour interagir avec Kronos et générer des fichiers .ics (calendrier) à partir de vos données de planning.",
    "version": "1.0",
    "permissions": [
        "webRequest",
        "storage"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "action": {
        "default_popup": "index.html",
        "default_icon": "icon128.png"
    },
    "icons": {
        "16": "icon16.png",
        "32": "icon32.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "background": {
        "service_worker": "service-worker.js",
        "type": "module"
    }
}
